<h1>Movies#index</h1>
<p>Find me in app/views/movies/index.html.erb</p>

<%= form_tag movies_path, :method => 'get' do %>
  <%= text_field_tag :title, placeholder="title" %> <!-- text_field_tag :search, params[:search] -->
  <%= text_field_tag :director, "director" %>
  <%= submit_tag("Search") %>
<% end %>

<p><%= link_to "Submit a Movie", new_movie_path %></p>

<% @movies.each do |movie| %>
  <%= render :partial => "movie", :object => movie %>
<%end%>